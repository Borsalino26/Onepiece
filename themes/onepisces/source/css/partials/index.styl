@import "./config.styl"

.index-box {
  display flex
  flex-direction row
  align-items flex-start
  justify-content space-around
  .index-side-bar {
    display flex
    flex-direction column
    align-items center
    margin 2rem 4rem
    max-width 30%
    color $fontColor
    .master-feature-div {
      display flex
      flex-direction column
      align-items center
      .avatar {
        border-radius 50%
        width 160px
        height 160px
      }
      .master-name {
        margin 0.5rem auto 0
      }
      .master-motto {
        font-size 1rem
        margin 0.5rem auto 0
      }
    }
  }
  .posts-div  {
    display flex
    flex-direction column
    align-items center
    margin 2rem 3rem
    max-width 70%
    min-height 66rem
    background-color $bgColorPostsDiv;
    color $fontColor
    box-shadow 0 1rem 1.5rem 0.5rem $boxShadowColor
    .posts-divider {
      color $fontColor
      border-left 30rem solid $fontColor
      border-right 30rem solid $fontColor
      line-height 2px
      margin 3rem 0
      padding 0 2rem 0
      text-align center
    }
    .post {
      padding 1.5rem 2rem
      width 60rem
      height 15rem
      background-color: $bgColor;
      border-radius 1.5rem
      box-shadow 0 0.3rem 2rem 0.3rem $boxShadowColor
      .post-title {
        font-size: 1.5em;
        .post-title-link {
          color $fontHyperLinkColor;
        }
      }
      .post-content {
        a:-webkit-any-link {
          color $fontHyperLinkColor;
        }
      }
    }
  }
}
